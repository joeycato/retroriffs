---
import Sidebar from '../components/Sidebar.astro'
import '../styles/main.scss'
import '@fontsource/lato'
import '@fontsource/pt-serif'

interface Props {
  title?: string
  description?: string
}

const siteMetadata = {
  title: "joey's stuff",
  description:
    "I love to build interactive nostalgic things in my spare time. I find it's also a fun way to exercise my passion for continued learning.",
  author: 'Joey Cato',
  siteUrl: 'https://joeycato.com',
  social: {
    linkedin: 'joeycato',
    email: 'joeycato@gmail.com',
  },
}

const { title, description } = Astro.props
const pageTitle = title || siteMetadata.title
const pageDescription = description || siteMetadata.description
const canonicalURL = new URL(Astro.url.pathname, Astro.site)
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="canonical" href={canonicalURL} />
    <title>{pageTitle}</title>
    <meta name="description" content={pageDescription} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:creator" content={siteMetadata.author} />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={pageDescription} />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <!-- Theme initialization (must run before CSS to prevent flash) -->
    <script is:inline>
      (function() {
        const stored = localStorage.getItem('theme-preference');
        if (stored) {
          document.documentElement.setAttribute('data-theme', stored);
        } else if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
          document.documentElement.setAttribute('data-theme', 'dark');
        }
      })();
    </script>
    <!-- Google Analytics -->
    <script
      type="text/partytown"
      async
      src="https://www.googletagmanager.com/gtag/js?id=G-YQ4YTFYWCR"
      is:inline></script>
    <script type="text/partytown" is:inline>
      window.dataLayer = window.dataLayer || []
      function gtag() {
        dataLayer.push(arguments)
      }
      gtag('js', new Date())
      gtag('config', 'G-YQ4YTFYWCR')
    </script>
    <style>
      .skip-link {
        position: absolute;
        top: -40px;
        left: 0;
        background: var(--text-heading);
        color: var(--bg-body);
        padding: 8px;
        z-index: 100;
        transition: top 0.3s;
      }
      .skip-link:focus {
        top: 0;
      }
    </style>
  </head>
  <body>
    <a href="#main-content" class="skip-link">Skip to content</a>
    <div class="wrapper">
      <Sidebar
        author={siteMetadata.author}
        description={siteMetadata.description}
        social={siteMetadata.social}
      />
      <slot />
    </div>
  </body>
</html>
